<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MainActivity2">
    <Button
        android:id="@+id/button1_act2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Button1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2_act2"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:background="@color/teal_700"
        android:textColor="@color/white"/>
        <Button
        android:id="@+id/button2_act2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Button2"
        app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button1_act2"
            app:layout_constraintEnd_toStartOf="@+id/button3_act2"
            android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:background="@color/teal_700"
        android:textColor="@color/white"/>
        <Button
        android:id="@+id/button3_act2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Button3"
        app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button2_act2"
            app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:background="@color/teal_700"
        android:textColor="@color/white"/>
    <fragment
        android:name="com.sanjoo.learnmvvm.fragments.Fragment1"
        android:id="@+id/fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1_act2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1_act2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout></layout>