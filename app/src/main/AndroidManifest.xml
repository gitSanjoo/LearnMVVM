<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnMVVM"
        tools:targetApi="31">
        <activity
            android:name="com.sanjoo.viewpager.LearViewPager"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sanjoo.retrofit.LearnRetrofit"
            android:exported="false"></activity>
        <activity
            android:name="com.sanjoo.animation.LearnBatteryAnimation"
            android:exported="false">

        </activity>
        <activity
            android:name=".ContextMenuBar"
            android:exported="false">

        </activity>
        <activity
            android:name=".PopUpMenuBar"
            android:exported="false" />

        <activity
            android:name=".OptionMenuBar"
            android:exported="false">

        </activity>
    </application>

</manifest>